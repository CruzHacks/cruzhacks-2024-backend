{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "yarn run build && firebase emulators:start",
    "shell": "yarn run build && firebase functions:shell",
    "deploy:dev": "yarn run build && firebase -P default deploy --only functions,firestore,database",
    "deploy:prod": "yarn run build && firebase -P production deploy --only functions,firestore,database",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "base-64": "^1.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.3.1",
    "firebase-tools": "^12.7.0",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/base-64": "^1.0.2",
    "@types/cors": "^2.8.15",
    "@types/validator": "^13.11.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
